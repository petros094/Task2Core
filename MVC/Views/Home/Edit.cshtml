@model MVC.Helper.PersonDTO

@{
    ViewData["Title"] = "Edit";
}
<html>
<head>
    <style>
    </style>
    <link href="~/css/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form id="contact" action="Edit" method="post">
            <h3>Edit Person</h3>
            <fieldset>
                <input type="hidden" value="@Model.PersonId" name="PersonId" />
            </fieldset>
            <fieldset>
                <input type="text" value="@Model.FirstName" name="FirstName" placeholder="First Name" tabindex="1" required />
            </fieldset>
            <fieldset>
                <input type="text" value="@Model.LastName" name="LAstName" placeholder="Last Name" tabindex="2" required />
            </fieldset>
            <fieldset>
                <input type="tel" value="@Model.PhoneNumber" name="PhoneNumber" placeholder="PhoneNumber" tabindex="3" />
            </fieldset>
            <fieldset>
                <input type="email" value="@Model.Email" name="Email" placeholder="Email" tabindex="4" required />
            </fieldset>
            <input class="btn btn-danger" type="submit" value="Save" />
            <input class="btn btn-success" type="submit" value="Cancel" onclick="location.href='/home/index'" />
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
